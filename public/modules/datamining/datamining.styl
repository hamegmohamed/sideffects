
@import 'material.css'

html,
body {
    margin  : 0;
    padding : 0;
    height  : 100%;
    font-family: open_sanslight;
    font-weight: 400;
}

#container {
    min-height: 100%;
    position: relative;
}

#header {
    height: 130px
    padding: 10px;
    background: #BE3757;

    color: white;
    font-size: 1.3em;
    text-align: center;

    cursor: pointer;
    transition: 0.5s;

    &:hover {
        height: 150px;
        transition: 0.5s;
    }
}

#body {
    padding: 10px;
    padding-bottom: 220px;

    // text-align: center;
    .report {
      width: 600px;
      margin: auto;
      font-size: 1.4em;

      h1#data-mining-rapport {
        font-size: 4em;
        text-align: center;
        margin-bottom 100px
      }

      .authors {
          width: 280px;
          margin: auto;
          
          ul {
            list-style-type: none;
          }
      }
      .toggle {
        margin-left: 80px;
        margin-bottom: 10px;
      }

      .toggled {
        opacity: 1;
        height: auto;
        overflow: hidden;
        transition: .5s;
      }

      .toggled-visible {
        // height: 100px;
        transition: .5s;
      }
      .toggled-hidded {
        // opacity: 0;
        height: 0px;
        overflow: hidden;
        transition: .5s;
      }
    }
}

#footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 160px;
    transition: 0.5s;
    background: #eee;

    &:hover {
        height: 180px;
        transition: 0.5s;
    }
}

@font-face {
    font-family: 'open_sanslight';
    src: url('./fonts/OpenSans-Light-webfont.eot');
    src: url('./fonts/OpenSans-Light-webfont.eot?#iefix') format('embedded-opentype'),
         url('./fonts/OpenSans-Light-webfont.woff') format('woff'),
         url('./fonts/OpenSans-Light-webfont.ttf') format('truetype'),
         url('./fonts/OpenSans-Light-webfont.svg#open_sanslight') format('svg');
    font-weight: normal;
    font-style: normal;
}
