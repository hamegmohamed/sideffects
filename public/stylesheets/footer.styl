// ------------------------
// FOOTER.STYL - SIDEFFECTS
// ------------------------

#footer{
  bottom: 0;
  position: relative;

  width: 100%;
  height: 200px;

  text-align: center;
  font-family: second-font;
  background: #eee;

  padding-top: 20px;

  .icon-footer img {
    height 40px
    width  40px
    margin 10px

    top 10px
    position relative
    transition 0.5s

    &:hover {
      top 0px
      position relative
      transition 0.5s
    }
  }
  .footer-text {
    cursor pointer
    font-size 1.2em
    transition 0.5s

    &:hover {
      color color-alizarin
      transition 0.5s
    }
  }
  .footer-ghost-text .text {
    transition 0.5s
  }

  .nav_footer ul {
    list-style-type: none;
    a {
      color: black;
      text-decoration: none;
      font-size: 1.5em;
      transition:0.5s;

      &:hover{
        color: #e74c3c;
        transition:0.5s;
      }
    }
  }
}
