// ------------------------
// HEADER.STYL - SIDEFFECTS
// ------------------------

#header {
  margin-top 100px

  .top-header {
    width: 500px;
    margin: auto;

    font-size: 3em;
    font-family: caviar_dreamsitalic;
    margin-top: 20px;

    text-align: center;

    .title {
      font-size: 1.9em;
      text-decoration: none;
      cursor: pointer;
      transition: 1s;

      &:hover {
          color: color-alizarin;
          transition: 1s;
      }
    }

    .supericon {
      height 100px
      width 100px

      margin auto
      border-radius 60px
      background color-alizarin

      cursor pointer
      transition 0.5s

      &:hover {
        -webkit-transform rotate(180deg)
        -moz-transform rotate(180deg)
        -ms-transform rotate(180deg)
        -o-transform rotate(180deg)
        transform rotate(180deg)
        transition 0.5s
      }
    }

  .border-box {
      width: 300px;
      margin: auto;
      margin-top: 20px;

      border-top-style: solid;
      border-top-width: 1px;
      border-top-color: black;

      text-align: center;
      font-size: 0.8em;

      opacity: 0;
      transition: 1s;
    }

    .nav-horizontal{
      margin: auto;
      margin-top: 50px;
      margin-bottom: 100px;

      transition: 1s;

      .header-icon{
        width: 100px;
        height: 100px;
        margin: 10px;
        opacity: 0.5;
        cursor: pointer;
        transition: 0.5s;

        &:hover {
          opacity: 1;
          width: 90px;
          height: 90px;
          transition: 0.5s;
        }
      }
    }
  }
}
