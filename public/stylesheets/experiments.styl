.experiments {
	display none
	position relative

	.project-box {
		//width: 260px;
		//height: 260px;
		padding: 15px;
		margin: 10px;

		color: black;
		text-decoration: none;

		background: transparent;
		border-radius: 4px;
		border: 10px solid rgba(0, 0, 0, 0.01);

		display: inline-block;
		text-align: center;

		cursor: pointer;

		transition: 1s;

		&:hover {
			color: black;
			background: #eee;
			border: 10px solid rgba(0, 0, 0, 0.12);
			box-shadow: 5px 5px 5px #eee
			transition: 1s;

			.authors {
				opacity: 1;
				transition: 0.2s;
			}
			.year {
				opacity: 1;
				transition: 1s;
			}
			.progress {
				opacity: 1;
				transition: 1.5s;
			}
		}

		.title {
			font-size: 1.3em;
			font-weight: bolder;
		}
		.platform {

		}
		.authors {
			opacity: 0;
		}
		.year {
			opacity: 0;
		}
		.progress {
			font-size: 1em;
			font-weight: bolder;
			opacity: 0;
		}
	}
}
