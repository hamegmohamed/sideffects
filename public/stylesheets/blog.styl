// ----------------------
// BLOG.STYL (SIDEFFECTS)
// ----------------------

.blog {
	display none
	position relative
	
	.article {
		padding: 10px;
		margin:  10px;

		.title {
			font-size: 2em;
			font-weigth: bolder;

			cursor: pointer;
			transition: 0.5s;

			&:hover {
				color: color-alizarin;
				transition: 0.5s;
			}
		}

		.tag {
			color: white;
			padding: 4px;
			margin-right: 2px;
			margin-bottom: 5px;
			cursor: pointer;

			display: inline-block
			background: color-alizarin;
			transition: 0.5s;

			&:hover {
				background: black;
				transition: 0.5s;
			}
		}

		.body {
			opacity: 0;
			display: none;
		}

		.close {
			width: 0;
			height: 0;
			display: inline-block;
			opacity: 0;
		}

		.admin-icons {
			display: none;

			.icon {
				display: none;
			}
		}
	}

	.fullscreen_article {
		color: white;
		padding: 10px;
		margin-left: 10px;
		margin-bottom: 20px;

		background: color-alizarin;
		border: 10px solid rgba(0, 0, 0, 0.15);

		transition: 1s;

		.title {
			font-size: 2em;
			cursor: pointer;
			margin-bottom: 10px;
			display: inline-block;
		}

		.date {
			margin-left: 24px;
		}

		.body {
			opacity: 1;
			margin-left: 24px;
			display: inline-block;
		}

		.tags {
			margin-left: 24px;

			.tag {
				color: white;
				padding: 4px;
				cursor: pointer;

				opacity: 0.5;
				background: black;
				display: inline-block
				transition: 0.5s;

				&:hover {
					opacity: 1;
					background: black;
					transition: 0.5s;
				}
			}
		}


		.close {
			background: transparent;

			width: 20px;
			height: 20px;

			cursor: pointer;
			padding: 5px;
			display: inline-block;

			-webkit-transform: rotate(45deg);
			-moz-transform: rotate(45deg);
			-ms-transform: rotate(45deg);
			-o-transform: rotate(45deg);
			transform: rotate(45deg);

			opacity: 0.4;
			transition: 0.5s;

			&:hover {
				opacity: 1;
				transition: 0.5s;
			}
		}

		.admin-icons {
			margin-left: 20px;
			display: inline-block;

			.icon {
				width: 24px;
				height: 24px;

				margin-right: 5px;
				cursor: pointer;

				opacity: 0.5;
				background: transparent;
				transition: 0.5s;

				&:hover {
					width: 17px;
					height: 17px;
					opacity: 1;
					transition: 0.5s;
				}
			}
		}
	}


	// FORM: NEW ARTICLE
	.form_article {
		padding: 20px;
		margin-top: 20px;
		border-radius: 4px;
		border: 10px solid rgba(0, 0, 0, 0.15);

		// TITLE
		.form-title {
			background: color-alizarin;
			width: 400px;
			height: 60px;

			margin: auto;
			margin-top: -60px;
			padding-top: 20px;

			box-shadow: 5px 5px 5px silver;

			color: white;
			font-size: 1.6em;
			text-align: center

			border-radius: 4px;
			}

		// LABELS
		.form-label {
			font-size: 2em;
			margin-bottom: 0px;
		}
		.mini-label {
			display: inline-block;
			margin-right: 20px;
			font-size: 1.3em;
			width: auto;
		}

		// ARTICLE TITLE
		.input-title {
			width: 90%;
			height: 40px;
			display: block;

			font-size: 1.4em;

			border-radius: 2px;
			border: 10px solid rgba(0, 0, 0, 0.15);
			transition: 1s;

			&:hover {
					border: 10px solid color-peter-river;
					transition: 1s;
			}

			&:focus {
					border: 10px solid color-emerald;
					transition: 1s;
			}
		}

		.input_tags {
			width: 90%;
			height: 20px;
			display: inline-block;

			color: white;
			background: color-peter-river;
			border-radius: 2px;
			border: 10px solid rgba(0, 0, 0, 0.15);

			transition: 1s;

			&:hover {
					border: 10px solid color-peter-river;
					transition: 1s;
			}

			&:focus {
					//border: 10px solid color-emerald;
					transition: 1s;
			}
		}

		// ARTICLE BODY - TEXT AREA
		.input_body {
				width: 90%;
				height: 250px;
				display: inline-block;

				font-size: 1.4em;

				border-radius: 2px;
				border: 10px solid rgba(0, 0, 0, 0.15);
				transition: 1s;

				&:hover {
						border: 10px solid color-peter-river;
						transition: 1s;
				}
				&:focus {
						border: 10px solid color-emerald;
						transition: 1s;
				}
		}
		textarea {
				resize: none;
		}

		// VALIDATION BUTTON
		.button_validate {
			display: block;
			width: 200px;
			height: 50px;

			margin: auto;
			margin-top: 40px;

			padding-top: 20px;

			cursor: pointer;

			color: white;
			font-size: 1.5em;
			text-align: center;
			background: color-peter-river;

			border-radius: 4px;
			border: 10px solid rgba(0, 0, 0, 0.15);

			transition: 1s;

			&:hover {
					// color: black;
					background: color-emerald;

					transition: 1s;
			}
		}

		.icons_panel {
			width: 50px;
			padding: 5px;

			position: relative;
			top: 0;

			display: inline-block;

			.icon{
				width: 40px;
				height: 40px;
				cursor: pointer;
				background: color-silver;

				transition: 0.5s;

				&:hover {
					background: black;
					transition: 0.5s;
				}
			}
		}
	}

	// FORM: ADMIN LOGIN
	.form-login {
		padding: 20px;
		margin-top: 20px;
		border-radius: 4px;
		border: 10px solid rgba(0, 0, 0, 0.15);

