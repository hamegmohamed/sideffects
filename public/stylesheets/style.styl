    // MESSAGE
    .message {
        color: white;
        text-align: center;

        padding: 10px;
				margin-left: 10px;
				margin-bottom: 20px;

        border-radius: 4px;
        background: color-emerald;

        .ok {
            width: 40px;
            height: 40px;

            padding: 10px;
            //padding-top: 15px;

            margin: auto;
            margin-top: 20px;
            margin-bottom: 20px;

            text-align: center;
            font-size: 1.4em;

            border-style: solid;
            border-width: 1px;
            border-radius: 30px;
            border-color: white;

            cursor: pointer;

            transition: 1s;

            &:hover {
                color: black;
                background: white;

                transition: 1s;
            }
        }
