/*-------------------*/
/*-----VARIABLES-----*/
/*-------------------*/
center-size = 500px
main-font = aleolightitalic
second-font = aleolight
color-alizarin = #e74c3c
color-peter-river = #3498db
color-emerald = #2ecc71
color-belize-hole = #2980b9
color-silver = #bdc3c7
/*------------------*/


/*-------------------*/
/*-----CSS-STYL-----*/
/*-----------------*/
html, body{
	margin:0;
	padding:0;
	height:100%;
	font-family: main-font;
	background-color:white;

	min-height: 100%;
	position: relative;
}

#header {
    .top_box {
        height: 5px;
        width: 100%;
        
        color: white;
        background: color-peter-river;
        
        transition: 0.5s;
        
        &:hover {
            background: color-belize-hole;
            transition: 0.5s;
        }
        
        .profil {
            display: none;
            overflow: hide;
            cursor: pointer;
            
            width: 200px;
            height: 200px;
            
            margin-left: 10px;
            background-color: transparent;
            border: 10px solid rgba(0, 0, 0, 0.15);
            transition: 0.5s;
            
            &:hover {
                border: 10px solid rgba(200, 40, 50, 0.15);
                transition: 0.5s;
            }
        }
        .cv {
            font-size: 1em;
            display: none;
            
            padding: 20px;
            overflow: hide;
            
            min-width: 300px;
            max-width: 80%;
            
                .resume {
                    padding-bottom: 10px;
                    
                    a {
                        color: white;
                        text-decoration: none;
                        transition:0.5s;

                        &:hover{
                          color: color-silver;
                          transition:0.5s;
                        }
                    }
                    
                    .english_resume {
                        display: block;
                    }

                    .french_resume {
                        display: none;
                    }

                    .horizontal_nav {
                        display: inline-block;
                        margin-bottom: 20px;

                        span {
                            font-size: 2em;
                            cursor: pointer;
                            margin-right: 10px;
                            transition: 0.5s;
                                &:hover {
                                    color: color-silver;
                                    transition: 0.5s;
                                }
                        }

                        span[selected="true"] {
                            color: color-silver;
                        }
                    }
                }
        }
    }
    
    .top_arrow{
        height: 30px;
        width: 30px;
        
        position: absolute;
        right: 0;
        
        cursor: pointer;
        padding: 10px;
        background: color-peter-river;
        
        
        transition: 0.5s;
        
        &:hover {
            background: color-alizarin;
            transition: 0.5s;
        }
    }
    
	.top_header {
        width: 500px;
        margin: auto;
    
		font-size: 4em;
		font-family: great_vibesregular;
		margin-top: 20px;

		text-align: center;
            
            .title {
                font-size: 1.5em;
                color: black;
                text-decoration: none;
                cursor: pointer;
                transition: 1s;

                &:hover {
                    color: color-alizarin;
                    transition: 1s;
                }
            }
        
        	.border_box{
                width: 300px;
                margin: auto;

                border-top-style: solid;
                border-top-width: 1px;
                border-top-color: black;

                text-align: center;
                margin-top: 20px;
                font-size: 0.8em;

                opacity: 0;
                transition: 1s;
            }

            .nav_horizontal{
                // width: 500px;
                margin: auto;
                margin-top: 100px;
                transition: 1s;

                .icon_index{
                    width: 142px;
                    height: 142px;
                    margin: 10px;
                    opacity: 0.5;
                    cursor: pointer;
                    transition: 0.5s;

                    //&:hover {
                        //width: 138px;
                        //height: 138px;
                        //opacity: 1;
                        //transition: 0.5s;
                    //}
                }
            }
	}
}

.sidebar {
    position: fixed;
    top: 40%;
    left: -40px;
    overflow: hide;

    width: auto;
    dislay: block;
    transition: 0.5s
    
    &:hover {
        left: 0;
        transition: 0.5s
    }

    .sidebar_icon {
        display: block;
        height: 44px;
        width: 44px;
        
        &:hover {
            width: auto;
            p {
                display: inline-block;
            }
        }
        
        img {
            position: relative;
            top: 0;
            left: 0;
            width: 44px;
            height: 44px;
            cursor: pointer;
            background: color-peter-river;
            display: inline-block;
            transition: 0.5s;

            &:hover {
                background: black;
                transition: 0.5s;
            }
        }
        
        p {
            display: none;
            color: white;
            font-size: 1em;
            height: 30px;
            padding: 7px;
            
            position: relative;
            top: -22px;
            
            background: color-peter-river;
        }
        
        
    }
}


#container{
	width: center-size;
	margin: auto;
	padding-bottom: 150px;
    
    transition: 1s;

	.project_box {
		//width: 260px;
		//height: 260px;
		padding: 15px;
		margin: 10px;

		color: black;
		text-decoration: none;

		background: transparent;
	    border-radius: 4px;
	    border: 10px solid rgba(0, 0, 0, 0.01);

		display: inline-block;
		text-align: center;

		cursor: pointer;

		transition: 1s;

			&:hover {
				color: black;
				background: #eee;
				border: 10px solid rgba(0, 0, 0, 0.12);
				box-shadow: 5px 5px 5px #eee
				transition: 1s;

				.authors {
					opacity: 1;
					transition: 0.2s;
				}
				.year {
					opacity: 1;
					transition: 1s;
				}
				.progress {
					opacity: 1;
					transition: 1.5s;
				}
			}

			.title {
				font-size: 1.3em;
				font-weight: bolder;
			}
			.platform {

			}
			.authors {
				opacity: 0;
			}
			.year {
				opacity: 0;
			}
			.progress {
				font-size: 1em;
				font-weight: bolder;
				opacity: 0;
			}
	}


	.article {
        .title {
            font-size: 2em;
            font-weigth: bolder;
        }
        
        padding: 10px;
    }
    
    
    // FORM: NEW ARTICLE
    // -----------------
    .form_article{
        padding: 20px;
        margin-top: 20px;
        border-radius: 4px;
	    border: 10px solid rgba(0, 0, 0, 0.15);
        
        // TITLE 
        // -----
        .form_title {
            background: color-alizarin;
            width: 400px;
            height: 60px;
            
            margin: auto;
            margin-top: -60px;
            padding-top: 20px;
            
            box-shadow: 5px 5px 5px silver;
            
            color: white;
            font-size: 1.6em;
            text-align: center
            
            border-radius: 4px;
        }
        
        // LABELS
        // ----------
        .form_label {
            font-size: 2em;
        }
        
        // ARTICLE TITLE
        // -----------------
        .form_article_title {
            display: block;
            width: 90%;
            height: 40px;
            
            border-radius: 2px;
	        border: 10px solid rgba(0, 0, 0, 0.15);
            transition: 1s;
            
            &:hover {
                border: 10px solid color-peter-river;
                transition: 1s;
            }
            
            &:focus {
                border: 10px solid color-emerald;
                transition: 1s;
            }
            
        }
        
        // ARTICLE BODY - TEXT AREA
        // -----------------
        .form_article_body {
            display: block;
            width: 90%;
            height: 142px;
            
            border-radius: 2px;
	        border: 10px solid rgba(0, 0, 0, 0.15);
            transition: 1s;
            
            &:hover {
                border: 10px solid color-peter-river;
                transition: 1s;
            }
            &:focus {
                border: 10px solid color-emerald;
                transition: 1s;
            }
        }
        textarea {
            resize: none;
        }
        
        // VALIDATION BUTTON
        // -----------------
        .form_button_validate {
            display: block;
            width: 200px;
            height: 50px;
            
            margin: auto;
            margin-top: 40px;
            
            padding-top: 20px;
            
            cursor: pointer;
            
            color: white;
            font-size: 1.5em;
            text-align: center;
            background: color-peter-river;
            
            border-radius: 4px;
            border: 10px solid rgba(0, 0, 0, 0.15);
            
            transition: 1s;
            
            &:hover {
                // color: black;
                background: color-emerald;
                
                transition: 1s;
            }
        }
    }
    
    // BODY MESSAGE
    .message {
        color: white;
        text-align: center;
        
        padding: 10px;
        border-radius: 4px;
        
        background: color-emerald;
        
        .ok {
            width: 40px;
            height: 40px;
            
            padding: 10px;
            //padding-top: 15px;
            
            margin: auto;
            margin-top: 20px;
            margin-bottom: 20px;
            
            text-align: center;
            font-size: 1.4em;
            
            border-style: solid;
            border-width: 1px;
            border-radius: 30px;
            border-color: white;
            
            cursor: pointer;
            
            transition: 1s;
            
            &:hover {
                color: black;
                background: white;
                
                transition: 1s;
            }
        }
    }
}


a {
    color: black;
    text-decoration: none;
    font-size: 1.5em;
    transition:0.5s;

    &:hover{
      color: color-alizarin;
      transition:0.5s;
    }
}


