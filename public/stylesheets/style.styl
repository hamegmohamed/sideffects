/*-------------------*/
/*-----CSS-STYL-----*/
/*-----------------*/
html, body{
	margin:0;
	padding:0;
	height:100%;
	font-family: main-font;
	background-color:white;

	min-height: 100%;
	position: relative;
}

#header {
    .top_box {
        height: 5px;
        width: 100%;

        color: white;
        background: color-peter-river;

        transition: 0.5s;

        &:hover {
            background: color-belize-hole;
            transition: 0.5s;
        }

        .profil {
            display: none;
            overflow: hide;
            cursor: pointer;

            width: 200px;
            height: 200px;

            margin-left: 10px;
            background-color: transparent;
            border: 10px solid rgba(0, 0, 0, 0.15);
            transition: 0.5s;

            &:hover {
                border: 10px solid rgba(200, 40, 50, 0.15);
                transition: 0.5s;
            }
        }
        .cv {
            font-size: 1em;
            display: none;

            padding: 20px;
            overflow: hide;

            min-width: 300px;
            max-width: 80%;

                .resume {
                    padding-bottom: 10px;

                    a {
                        color: white;
                        text-decoration: none;
                        transition:0.5s;

                        &:hover{
                          color: color-silver;
                          transition:0.5s;
                        }
                    }

                    .english_resume {
                        display: block;
                    }

                    .french_resume {
                        display: none;
                    }

                    .horizontal_nav {
                        display: inline-block;
                        margin-bottom: 20px;

                        span {
                            font-size: 2em;
                            cursor: pointer;
                            margin-right: 10px;
                            transition: 0.5s;
                                &:hover {
                                    color: color-silver;
                                    transition: 0.5s;
                                }
                        }

                        span[selected="true"] {
                            color: color-silver;
                        }
                    }
                }
        }
    }

    .top_arrow{
        height: 30px;
        width: 30px;

        position: absolute;
        right: 0;

        cursor: pointer;
        padding: 10px;
        background: color-peter-river;


        transition: 0.5s;

        &:hover {
            background: color-alizarin;
            transition: 0.5s;
        }
    }

	.top_header {
        width: 500px;
        margin: auto;

		font-size: 4em;
		font-family: great_vibesregular;
		margin-top: 20px;

		text-align: center;

            .title {
                font-size: 1.5em;
                color: black;
                text-decoration: none;
                cursor: pointer;
                transition: 1s;

                &:hover {
                    color: color-alizarin;
                    transition: 1s;
                }
            }

        	.border_box{
                width: 300px;
                margin: auto;

                border-top-style: solid;
                border-top-width: 1px;
                border-top-color: black;

                text-align: center;
                margin-top: 20px;
                font-size: 0.8em;

                opacity: 0;
                transition: 1s;
            }

            .nav_horizontal{
                // width: 500px;
                margin: auto;
                margin-top: 100px;
                transition: 1s;

                .icon_index{
                    width: 142px;
                    height: 142px;
                    margin: 10px;
                    opacity: 0.5;
                    cursor: pointer;
                    transition: 0.5s;

                    //&:hover {
                        //width: 138px;
                        //height: 138px;
                        //opacity: 1;
                        //transition: 0.5s;
                    //}
                }
            }
	}
}

.sidebar {
    position: fixed;
    top: 40%;
    left: -40px;
    overflow: hide;

    width: auto;
    dislay: block;
    transition: 0.5s

    &:hover {
        left: 0;
        transition: 0.5s
    }

    .sidebar_icon {
        display: block;
        height: 44px;
        width: 44px;

        &:hover {
            width: auto;
            p {
                display: inline-block;
            }
        }

        img {
            position: relative;
            top: 0;
            left: 0;
            width: 44px;
            height: 44px;
            cursor: pointer;
            background: color-peter-river;
            display: inline-block;
            transition: 0.5s;

            &:hover {
                background: black;
                transition: 0.5s;
            }
        }

        p {
            display: none;
            color: white;
            font-size: 1em;
            height: 30px;
            padding: 7px;

            position: relative;
            top: -22px;

            background: color-peter-river;
        }


    }
}


#container{
	width: center-size;
	margin: auto;
	padding-bottom: 150px;

    transition: 1s;

	.side {

		.box {
			opacity: 0.1;
			cursor: pointer;

			height: 60px;
			width: 60px;

			margin: auto;
			margin-top: 60px;
			background: color-peter-river;

			border-radius: 10px;
			border: 10px solid rgba(0, 0, 0, 0.15);

			-webkit-transform: rotate(45deg);
			-moz-transform: rotate(45deg);
			-ms-transform: rotate(45deg);
			-o-transform: rotate(45deg);
			transform: rotate(45deg);

			transition: 0.5s;

			&:hover {
				opacity: 1;

				height: 65px;
				width: 65px;

				-webkit-transform: rotate(90deg);
				-moz-transform: rotate(90deg);
				-ms-transform: rotate(90deg);
				-o-transform: rotate(90deg);
				transform: rotate(90deg);

				transition: 0.5s;
			}
		}

		.dialog {
			background: color-peter-river;
			opacity: 0.7;
		}
	}

	.project_box {
		//width: 260px;
		//height: 260px;
		padding: 15px;
		margin: 10px;

		color: black;
		text-decoration: none;

		background: transparent;
	    border-radius: 4px;
	    border: 10px solid rgba(0, 0, 0, 0.01);

		display: inline-block;
		text-align: center;

		cursor: pointer;

		transition: 1s;

			&:hover {
				color: black;
				background: #eee;
				border: 10px solid rgba(0, 0, 0, 0.12);
				box-shadow: 5px 5px 5px #eee
				transition: 1s;

				.authors {
					opacity: 1;
					transition: 0.2s;
				}
				.year {
					opacity: 1;
					transition: 1s;
				}
				.progress {
					opacity: 1;
					transition: 1.5s;
				}
			}

			.title {
				font-size: 1.3em;
				font-weight: bolder;
			}
			.platform {

			}
			.authors {
				opacity: 0;
			}
			.year {
				opacity: 0;
			}
			.progress {
				font-size: 1em;
				font-weight: bolder;
				opacity: 0;
			}
	}


	.article {
		padding: 10px;
		margin:  10px;

        .title {
            font-size: 2em;
            font-weigth: bolder;

			cursor: pointer;
			transition: 0.5s;

			&:hover {
				color: color-alizarin;
				transition: 0.5s;
			}
        }

		.tag {
			color: white;
			padding: 4px;
			margin-right: 2px;
			margin-bottom: 5px;
			cursor: pointer;

			display: inline-block
			background: color-alizarin;
			transition: 0.5s;

			&:hover {
				background: black;
				transition: 0.5s;
			}
		}

		.body {
			opacity: 0;
			display: none;
		}

		.close {
			width: 0;
			height: 0;
			display: inline-block;
			opacity: 0;
		}

		.admin_icons {
			display: none;

			.icon {
				display: none;
			}
		}
    }

	.fullscreen_article {
		color: white;
		padding: 10px;
		margin-left: 10px;
		margin-bottom: 20px;

		background: color-alizarin;
		border: 10px solid rgba(0, 0, 0, 0.15);

		transition: 1s;

		.title {
			font-size: 2em;
			cursor: pointer;
			margin-bottom: 10px;
			display: inline-block;
		}

		.date {
			margin-left: 24px;
		}

		.body {
			opacity: 1;
			margin-left: 24px;
			display: inline-block;
		}

		.tags {
			margin-left: 24px;

			.tag {
				color: white;
				padding: 4px;
				cursor: pointer;

				opacity: 0.5;
				background: black;
				display: inline-block
				transition: 0.5s;

				&:hover {
					opacity: 1;
					background: black;
					transition: 0.5s;
				}
			}
		}


		.close {
			background: transparent;

			width: 20px;
			height: 20px;

			cursor: pointer;
			padding: 5px;
			display: inline-block;

			-webkit-transform: rotate(45deg);
            -moz-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            -o-transform: rotate(45deg);
            transform: rotate(45deg);

			opacity: 0.4;
			transition: 0.5s;

			&:hover {
				opacity: 1;
				transition: 0.5s;
			}
		}

		.admin_icons {
			margin-left: 20px;
			display: inline-block;

			.icon {
				width: 24px;
				height: 24px;

				margin-right: 5px;
				cursor: pointer;

				opacity: 0.5;
				background: transparent;
				transition: 0.5s;

				&:hover {
					width: 17px;
					height: 17px;
					opacity: 1;
					transition: 0.5s;
				}
			}
		}
	}


    // FORM: NEW ARTICLE
    // -----------------
    .form_article {
        padding: 20px;
        margin-top: 20px;
        border-radius: 4px;
	    	border: 10px solid rgba(0, 0, 0, 0.15);

        // TITLE
        // -----
        .form_title {
            background: color-alizarin;
            width: 400px;
            height: 60px;

            margin: auto;
            margin-top: -60px;
            padding-top: 20px;

            box-shadow: 5px 5px 5px silver;

            color: white;
            font-size: 1.6em;
            text-align: center

            border-radius: 4px;
        }

        // LABELS
        // ----------
        .form_label {
            font-size: 2em;
						margin-bottom: 0px;
        }
				.mini_label {
					display: inline-block;
					margin-right: 20px;
					font-size: 1.3em;
					width: auto;
				}

        // ARTICLE TITLE
        // -----------------
        .input_title {
            width: 90%;
            height: 40px;
						display: block;

						font-size: 1.4em;

            border-radius: 2px;
	        	border: 10px solid rgba(0, 0, 0, 0.15);
            transition: 1s;

            &:hover {
                border: 10px solid color-peter-river;
                transition: 1s;
            }

            &:focus {
                border: 10px solid color-emerald;
                transition: 1s;
            }

        }

				.input_tags {
					width: 90%;
					height: 20px;
					display: inline-block;

					color: white;
					background: color-peter-river;
					border-radius: 2px;
			        border: 10px solid rgba(0, 0, 0, 0.15);

		            transition: 1s;

		            &:hover {
		                border: 10px solid color-peter-river;
		                transition: 1s;
		            }

		            &:focus {
		                //border: 10px solid color-emerald;
		                transition: 1s;
		            }
				}

        // ARTICLE BODY - TEXT AREA
        // -----------------
        .input_body {
            width: 90%;
            height: 250px;
						display: inline-block;

            font-size: 1.4em;

            border-radius: 2px;
	        	border: 10px solid rgba(0, 0, 0, 0.15);
            transition: 1s;

            &:hover {
                border: 10px solid color-peter-river;
                transition: 1s;
            }
            &:focus {
                border: 10px solid color-emerald;
                transition: 1s;
            }
        }
        textarea {
            resize: none;
        }

        // VALIDATION BUTTON
        // -----------------
        .button_validate {
            display: block;
            width: 200px;
            height: 50px;

            margin: auto;
            margin-top: 40px;

            padding-top: 20px;

            cursor: pointer;

            color: white;
            font-size: 1.5em;
            text-align: center;
            background: color-peter-river;

            border-radius: 4px;
            border: 10px solid rgba(0, 0, 0, 0.15);

            transition: 1s;

            &:hover {
                // color: black;
                background: color-emerald;

                transition: 1s;
            }
        }

				.icons_panel {
					width: 50px;
					padding: 5px;

					position: relative;
					top: 0;

					display: inline-block;

					.icon{
						width: 40px;
						height: 40px;
						cursor: pointer;
						background: color-silver;

						transition: 0.5s;

						&:hover {
							background: black;
							transition: 0.5s;
						}
					}
				}
    }

